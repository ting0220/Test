<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/id_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/id_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:background="@color/blue_tool"
            android:theme="@style/ToolBarTheme"
            app:titleTextColor="@color/white_home"
            app:title="@string/drawer_home"/>

        <FrameLayout
            android:id="@+id/id_main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_main_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:clipToPadding="false"
        android:divider="@null"
        android:paddingTop="0dp"/>
</android.support.v4.widget.DrawerLayout>
