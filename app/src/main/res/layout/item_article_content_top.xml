<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white_day"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_article_content_top_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/blue"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/night_mask_day"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/id_bottom_view"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/id_article_content_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_bottom_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/drawer_home"
            android:textColor="@color/white_day"
            android:textSize="@dimen/sp_14"/>


        <TextView
            android:id="@+id/id_article_content_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_article_content_top_text"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/drawer_home"
            android:textColor="@color/white_day"
            android:textSize="@dimen/sp_18"/>
    </RelativeLayout>
</LinearLayout>