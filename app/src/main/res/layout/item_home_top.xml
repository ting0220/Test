<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_home_top_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/id_home_top_img_meng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/night_mask_home"
        />

    <TextView
        android:id="@+id/id_home_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_home_top_img"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/app_name"
        android:textColor="@color/white_home"
        android:textSize="@dimen/sp_20"/>


</RelativeLayout>