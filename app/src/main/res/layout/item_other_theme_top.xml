<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_other_theme_top_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/id_other_theme_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_other_theme_top_img"
        android:padding="@dimen/dp_20"
        android:text="@string/today_news"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_other_theme_top_img"
        android:paddingTop="@dimen/dp_10"
        android:background="@color/background_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_other_theme_top_editor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:text="@string/editor"/>

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:layout_width="@dimen/dp_30"-->
        <!--android:layout_height="@dimen/dp_30"-->
        <!--android:layout_below="@id/id_other_theme_top_img"-->
        <!--android:layout_toRightOf="@id/id_other_theme_top_editor_name"-->
        <!--android:src="@drawable/unlogin"/>-->
        <LinearLayout
            android:id="@+id/id_other_theme_top_author_photo_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>
    </LinearLayout>

</RelativeLayout>