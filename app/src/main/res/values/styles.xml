<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppBaseTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_day</item>
        <item name="colorPrimaryDark">@color/black_day</item>
        <item name="colorAccent">@color/white_day</item>
        <item name="background">@color/white_day</item>
    </style>

    <style name="AppBaseTheme.Night">
        <item name="colorPrimary">@color/orange_night</item>
        <item name="colorPrimaryDark">@color/black_night</item>
        <item name="colorAccent">@color/white_night</item>
        <item name="background">@color/white_night</item>
    </style>


    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white_day</item>
    </style>
</resources>
